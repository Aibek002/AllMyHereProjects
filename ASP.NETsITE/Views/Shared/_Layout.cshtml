<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.NETsITE.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="logo">
        <br><br>
        <h1 id="logoH1">Библиотека</h1>
@* <img id="logoImgRight" src=""> *@
    </div>
    <header>
        <nav id="header"class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                
              
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">

                            <a class="nav-link text-dark" href="#imgAboutLibrary">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#NewsImg" >News</a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#Book">Buy Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#Contacts">Contacts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#cart">WayOfCarts</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @await Html.PartialAsync("about")

@await Html.PartialAsync("news")

@await Html.PartialAsync("carts")

@await Html.PartialAsync("book")
@await Html.PartialAsync("contacts")

    <footer>
        <div id="fff" class="container">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
